<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/distance_5dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_note_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/note_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TitleTitleTitleTitleTitle"
                android:textColor="@color/font_major_color"
                android:textSize="@dimen/font_size_18sp" />

            <TextView
                android:id="@+id/note_item_modify_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/distance_5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Modify Time" />
        </LinearLayout>

        <TextView
            android:id="@+id/note_item_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:singleLine="true"
            android:text="Brief content"
            android:textColor="@color/font_major_color"
            android:textSize="@dimen/font_size_14sp" />
    </LinearLayout>

</LinearLayout>